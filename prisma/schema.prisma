model Rooms {
  id        Int      @id @default(autoincrement())
  title     String   @db.VarChar(255) @unique
  imgUrl String?
  isAvailable  Boolean    @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@fulltext([title])
}

model Equipments {
  id        Int      @id @default(autoincrement())
  title     String   @db.VarChar(255) @unique
  itemCount Int
  imgUrl String?
  isAvailable  Boolean    @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
}